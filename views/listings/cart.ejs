<% layout("/layout/boilerplate.ejs") %>

<style>
    .wrapperl {
        width: 100%;
        height: 100vh;
        background-color: black;
        background-image: url("https://res.cloudinary.com/dymfsdc1w/image/upload/v1702653564/wanderlust_DEV/handrawn-barbecue-elements_125540-588-removebg-preview_mdkri1.png")
    }

    .menu h1 {
        font-size: 55px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 30px;
    }

    .menu h1 span {
        color: #fac031;
        margin-left: 15px;
        font-family: mv boli;
    }

    .menu h1 span::after {
        content: '';
        width: 100%;
        height: 2px;
        background: #fac031;
        display: block;
        position: relative;
        bottom: 15px;
    }
</style>

<div class="wrapperl">
    <div class="col mb-4 text-muted menu ">
        <h1 class="text-light">Your <span>Cart</span></h1>
    </div>
    <div class="container text-light  " style="background-color: black;overflow:hidden">
        <% if (details && details.length > 0) { %>
            <% for (let detail of details) { %>
                <div class="row ">
                    <div class="col-1 mt-4"></div>
                    <div class="col-4 mt-4">
                        <img src="https://res.cloudinary.com/dymfsdc1w/image/upload/v1702661850/wanderlust_DEV/image-removebg-preview_2_axgbzg.png" class="img-fluid" alt="Wild Landscape" />
                    </div>
                    <div class="col-6 mt-4 ">
                        <div class="col mt-4 ">
                            <p>Address:<%= detail.address %></p>
                            <P>Qnty:<%= detail.quantity %></P>
                            <p>Date: <%=detail.date %></p>
                            <p>Total: $<%= detail.total %></p>
                            <p>Email: <%= detail.email %></p>
                        </div>
                    </div>
                    <div class="col-1 mt-4"></div>
                </div>
            <% } %>
        <% } else { %>
            <p>No details found</p>
        <% } %>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
